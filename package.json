{
  "name": "reflow",
  "version": "0.1.0",
  "description": "Programmatic identity system for generative logos and brand elements",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "next dev --port ${PORT:-3002}",
    "dev:alt": "next dev --port 3012",
    "dev:clean": "pnpm clean && next dev --port ${PORT:-3002}",
    "build": "pnpm build:packages && tsup && next build",
    "build:lib": "tsup",
    "build:packages": "pnpm --filter './packages/**' build",
    "build:utils": "pnpm --filter '@reflow/template-utils' build",
    "start": "next start",
    "clean": "rm -rf .next dist node_modules/.cache .turbopack",
    "dev:fresh": "pnpm clean && pnpm dev",
    "reset": "pnpm clean && pnpm install",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "vitest",
    "generate:logo": "pnpm build:lib && node scripts/generate-logo.js",
    "dev:utils": "pnpm --filter '@reflow/template-utils' dev"
  },
  "keywords": [
    "generative",
    "logo",
    "identity",
    "brand",
    "programmatic",
    "design",
    "wave"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@ai-sdk/openai": "^1.3.22",
    "@anthropic-ai/claude-code": "^1.0.35",
    "@base-ui-components/react": "1.0.0-beta.0",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@monaco-editor/react": "^4.7.0",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@reflow/template-utils": "workspace:*",
    "@swc/wasm-web": "^1.12.9",
    "@types/better-sqlite3": "^7.6.13",
    "@types/lodash": "^4.17.20",
    "@uiw/react-codemirror": "^4.23.13",
    "ai": "^4.3.16",
    "better-auth": "^1.2.12",
    "better-sqlite3": "^12.2.0",
    "canvas": "^2.11.2",
    "class-variance-authority": "^0.7.1",
    "claude": "^0.1.2",
    "clsx": "^2.1.1",
    "file-saver": "^2.0.5",
    "gifencoder": "^2.0.1",
    "immer": "^10.1.1",
    "jszip": "^3.10.1",
    "kysely": "^0.28.2",
    "lodash": "^4.17.21",
    "lucide-react": "^0.523.0",
    "monaco-editor": "^0.52.2",
    "nanoid": "^5.1.5",
    "next": "15.3.4",
    "openai": "^5.8.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sharp": "^0.33.4",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.25.74",
    "zustand": "^4.5.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/file-saver": "^2.0.7",
    "@types/gifencoder": "^2.0.1",
    "@types/node": "^20.11.5",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitejs/plugin-react": "^4.6.0",
    "ajv": "^8.17.1",
    "autoprefixer": "^10.4.19",
    "esbuild": "^0.25.5",
    "eslint": "^8.56.0",
    "jsdom": "^26.1.0",
    "playwright": "^1.53.2",
    "postcss": "^8.4.39",
    "puppeteer": "^24.11.1",
    "tailwindcss": "^3.4.4",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18"
  },
  "workspaces": [
    "packages/*"
  ]
}